{
    "name": "node",
    "version": "1.0.0",
    "description": "hello-world-typescript",
    "main": "dist/app.js",
    "scripts": {
        "test": "jest --no-cache  --detectOpenHandles --runInBand --forceExit",
        "start": "tsc && node dist/app.js",
        "start:debug": "tsc && node --inspect=0.0.0.0 --trace-warnings dist/app.js",
        "format": "prettier --write \"src/**/*.ts\"",
        "compile": "tsc",
        "build": "tsc",
        "develop": "tsc -w"
    },
    "author": "Alberto Ielpo",
    "license": "MIT",
    "devDependencies": {
        "@types/jest": "~30.0.0",
        "jest": "~30.1.3",
        "prettier": "~3.6.2",
        "typescript": "~5.9.2"
    },
    "dependencies": {
        "@fastify/cors": "^11.2.0",
        "fastify": "^5.7.1",
        "reflect-metadata": "^0.2.2"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": "src",
        "testRegex": ".*\\.spec\\.ts$",
        "testEnvironment": "node"
    },
    "engines": {
        "node": ">=22",
        "npm": ">=10"
    }
}
